<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    tools:context=".fragments.UploadNoteFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/upload_question1"
        android:textSize="18sp"
        android:layout_marginTop="70dp"/>

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/spinnerSubject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/upload_question2"
        android:textSize="18sp"
        android:layout_marginTop="170dp"/>

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/spinnerNoteCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_gravity="center_horizontal" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/upload_question3"
        android:textSize="18sp"
        android:layout_marginTop="270dp"/>

    <EditText
        android:id="@+id/etNoteCategoryNumber"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:importantForAutofill="no"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/custom_edit_text"
        android:layout_marginTop="320dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textSize="15sp"
        android:hint="@string/hint_note_category"
        android:textAlignment="center" />
    <Button
        android:id="@+id/btUploadNote"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_marginTop="400dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="@string/nav_upload"/>

    <ProgressBar
        android:id="@+id/pbUploadNote"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:indeterminateDrawable="@drawable/custom_progress_bar_style" />


</FrameLayout>